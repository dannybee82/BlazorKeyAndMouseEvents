@if (Positions != null && Positions.Any())
{
	for (int i = 0; i < Positions.Count; i++)
	{
		var current = Positions[i];

		int x1 = GetXFromString(current);
		int y1 = GetYFromString(current);

		<div class="drawCircle" 
			 style="height:20px;
					width:20px;
					background-color:aquamarine;
					border-radius:10px;
					position:absolute;
					top:@(GetPosition(y1 - 10));
					left:@(GetPosition(x1 - 10));
					z-index:2"
			/>

	}
}

@code {
	[Parameter]
	public List<string> Positions { get; set; } = default!;

	private int GetXFromString(string s)
	{
		string[] splitted = s.Split(",");
		return Convert.ToInt32(splitted[0]);
	}

	private int GetYFromString(string s)
	{
		string[] splitted = s.Split(",");
		return Convert.ToInt32(splitted[1]);
	}

	private string GetPosition(int pos)
	{
		return pos + "px";
	}

}